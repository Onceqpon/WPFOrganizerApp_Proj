<Window x:Class="WPFOrganizerApp.LoginPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="300" Width="300">
    <Border Background="DarkSlateGray">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" MinHeight="154.44"/>
                <RowDefinition Height="Auto" MinHeight="49.96"/>
            </Grid.RowDefinitions>

            <StackPanel VerticalAlignment="Center" Margin="30" HorizontalAlignment="Center" Height="154" Width="200">
                <TextBlock Text="Logowanie" Foreground="White" FontSize="20" Margin="0 0 0 20"/>
                <Label Content="Adres e-mail:" Foreground="White"/>
                <TextBox x:Name="txtEmail"  Width="200" Margin="0 5"/>
                <Label Content="Hasło:" Foreground="White"/>
                <PasswordBox x:Name="txtPassword" Width="200" Margin="0 5"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,194,0,40" Width="200" Grid.RowSpan="2">
                <Button Content="Zaloguj się" Width="80" Margin="5" Click="LoginButton_Click" Height="25"/>
                <Button Content="Zarejestruj się" Width="100" Margin="5" Click="RegisterButton_Click" Height="25"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
