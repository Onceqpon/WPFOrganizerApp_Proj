<Window x:Class="WPFOrganizerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFOrganizerApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <Grid Background="LightGray" Height="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Menu Background="LightGray" Grid.Column="0">
                <MenuItem Header="Notatki" VerticalAlignment="Center" />
                <MenuItem Header="Zadania" VerticalAlignment="Center" />
                <MenuItem Header="Ustawienia" VerticalAlignment="Center" />
            </Menu>

            <TextBlock x:Name="userAccount" Grid.Column="1" Text="Zalogowany jako: " HorizontalAlignment="Left" Margin="472,0,0,0"  />
        </Grid>
    </StackPanel>
</Window>
