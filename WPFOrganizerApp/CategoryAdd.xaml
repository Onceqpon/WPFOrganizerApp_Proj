<Window x:Class="WPFOrganizerApp.CategoryAdd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFOrganizerApp"
        mc:Ignorable="d"
        Title="CategoryAdd" Height="300" Width="300">
    <Border Background="DarkSlateGray">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" MinHeight="154.44"/>
                <RowDefinition Height="Auto" MinHeight="49.96"/>
            </Grid.RowDefinitions>

            <StackPanel VerticalAlignment="Top" Margin="0,53,0,0" HorizontalAlignment="Center" Height="154" Width="200">
                <TextBlock Text="Dodaj Kategorie" Foreground="White" FontSize="20" Margin="0 0 0 20"/>
                <Label Content="Nazwa Kategori" Foreground="White"/>
                <TextBox x:Name="newCategory"  Width="200" Margin="0 5"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,194,0,40" Width="200" Grid.RowSpan="2">
                <Button Content="Zapisz" Width="80" Margin="5" Click="Save_Click" Height="25"/>
                <Button Content="Wyjdź" Width="100" Margin="5" Click="Exit_Click" Height="25"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>

